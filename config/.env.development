# Development Environment Configuration
# This file contains default settings for local development

# Environment
ENVIRONMENT=development

# Trading API Keys (Use testnet/sandbox keys in development)
BINANCE_API_KEY=your_binance_testnet_api_key_here
BINANCE_API_SECRET=your_binance_testnet_api_secret_here
BINANCE_TESTNET=true

ALPACA_API_KEY=your_alpaca_paper_api_key_here
ALPACA_API_SECRET=your_alpaca_paper_api_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Database Configuration (SQLite for local development)
DATABASE_TYPE=sqlite
SQLITE_PATH=data/trading_bot_dev.db

# Redis Configuration (Optional for development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# MongoDB Configuration (Optional for development)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=trading_swarm_dev
MONGODB_USERNAME=
MONGODB_PASSWORD=

# Email Configuration (Optional for development)
EMAIL_ENABLED=false
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Security
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production

# External Services (Optional for development)
TELEGRAM_BOT_TOKEN=
DISCORD_WEBHOOK_URL=

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG
TESTING_MODE=true

# Trading Configuration
MAX_POSITION_SIZE=0.01
CAPITAL=1000.00
ENABLE_REAL_TRADING=false

# Monitoring
PROMETHEUS_ENABLED=false
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Raspberry Pi Settings (If developing on RPi)
RPI_NODE_ID=dev_node_001
RPI_LOCATION=development
